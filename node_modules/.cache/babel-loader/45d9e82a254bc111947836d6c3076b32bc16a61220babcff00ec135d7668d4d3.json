{"ast":null,"code":"import axios from 'axios';\nimport Message from './Message.vue';\nexport default {\n  name: \"Dashboard\",\n  data() {\n    return {\n      burgers: null,\n      burger_id: null,\n      status: [],\n      msg: null\n    };\n  },\n  methods: {\n    async getPedidos() {\n      try {\n        const response = await axios.get('http://localhost:3000/burgers');\n        this.burgers = response.data;\n        await this.getStatus();\n      } catch (error) {\n        console.error('Erro ao obter pedidos:', error);\n      }\n    },\n    async getStatus() {\n      try {\n        const response = await axios.get('http://localhost:3000/status');\n        this.status = response.data;\n      } catch (error) {\n        console.error('Erro ao obter status:', error);\n      }\n    },\n    async deleteBurger(id) {\n      try {\n        const response = await axios.delete(`http://localhost:3000/burgers/${id}`);\n        const res = response.data;\n        this.msg = `Pedido Removido com Sucesso!`;\n        setTimeout(() => {\n          this.msg = \"\";\n        }, 5000);\n        await this.getPedidos();\n      } catch (error) {\n        console.error('Erro ao remover pedido:', error);\n      }\n    },\n    async updateBurger(event, id) {\n      const option = event.target.value;\n      const data = {\n        status: option\n      };\n      try {\n        const response = await axios.patch(`http://localhost:3000/burgers/${id}`, data);\n        const res = response.data;\n        this.msg = `O Pedido Nº ${res.id} foi atualizado para Status ${res.status}!`;\n        setTimeout(() => {\n          this.msg = \"\";\n        }, 5000);\n      } catch (error) {\n        console.error('Erro ao atualizar pedido:', error);\n      }\n    }\n  },\n  mounted() {\n    this.getPedidos();\n  },\n  components: {\n    Message\n  }\n};","map":{"version":3,"names":["axios","Message","name","data","burgers","burger_id","status","msg","methods","getPedidos","response","get","getStatus","error","console","deleteBurger","id","delete","res","setTimeout","updateBurger","event","option","target","value","patch","mounted","components"],"sources":["D:\\Vuejs\\3_make_your_burger\\src\\components\\Dashboard.vue"],"sourcesContent":["<template>\r\n    <div id=\"burger-table\" v-if=\"burgers && burgers.length > 0\">\r\n        <div>\r\n            <Message :msg=\"msg\" v-show=\"msg\" />\r\n            <div id=\"burger-table-heading\">\r\n                <div class=\"order-id\">#</div>\r\n                <div>Clientes:</div>\r\n                <div>Pão:</div>\r\n                <div>Carne:</div>\r\n                <div>Opcionais:</div>\r\n                <div>Ações</div>\r\n            </div>\r\n        </div>\r\n        <div id=\"burger-table-rows\">\r\n            <div class=\"burger-table-row\" v-for=\"burger in burgers\" :key=\"burger.id\">\r\n                <div class=\"order-number\">{{ burger.id }}</div>\r\n                <div>{{ burger.nome }}</div>\r\n                <div>{{ burger.pao }}</div>\r\n                <div>{{ burger.carne }}</div>\r\n                <div>\r\n                    <ul>\r\n                        <li v-for=\"(opcional, index) in burger.opcionais\" :key=\"index\">\r\n                            {{ opcional }}\r\n                        </li>\r\n                    </ul>\r\n                </div>\r\n                <div>\r\n                    <select name=\"status\" class=\"status\" @change=\"updateBurger($event, burger.id)\">\r\n                        <option value=\"\">Selecione</option>\r\n                        <option v-for=\"s in status\" :key=\"s.id\" :value=\"s.tipo\" :selected=\"burger.status == s.tipo\">\r\n                            {{ s.tipo }}\r\n                        </option>\r\n                    </select>\r\n                    <button class=\"delete-btn\" @click=\"deleteBurger(burger.id)\">Cancelar</button>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n    <div v-else>\r\n        <h2>Não há pedidos registrados</h2>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nimport Message from './Message.vue';\r\nexport default {\r\n    name: \"Dashboard\",\r\n    data() {\r\n        return {\r\n            burgers: null,\r\n            burger_id: null,\r\n            status: [],\r\n            msg: null\r\n        };\r\n    },\r\n    methods: {\r\n        async getPedidos() {\r\n  try {\r\n    const response = await axios.get('http://localhost:3000/burgers');\r\n    this.burgers = response.data;\r\n    await this.getStatus();\r\n  } catch (error) {\r\n    console.error('Erro ao obter pedidos:', error);\r\n  }\r\n},\r\n\r\nasync getStatus() {\r\n  try {\r\n    const response = await axios.get('http://localhost:3000/status');\r\n    this.status = response.data;\r\n  } catch (error) {\r\n    console.error('Erro ao obter status:', error);\r\n  }\r\n},\r\n\r\nasync deleteBurger(id) {\r\n  try {\r\n    const response = await axios.delete(`http://localhost:3000/burgers/${id}`);\r\n    const res = response.data;\r\n    this.msg = `Pedido Removido com Sucesso!`;\r\n    setTimeout(() => {\r\n      this.msg = \"\";\r\n    }, 5000);\r\n    await this.getPedidos();\r\n  } catch (error) {\r\n    console.error('Erro ao remover pedido:', error);\r\n  }\r\n},\r\n\r\nasync updateBurger(event, id) {\r\n  const option = event.target.value;\r\n  const data = { status: option };\r\n  try {\r\n    const response = await axios.patch(`http://localhost:3000/burgers/${id}`, data);\r\n    const res = response.data;\r\n    this.msg = `O Pedido Nº ${res.id} foi atualizado para Status ${res.status}!`;\r\n    setTimeout(() => {\r\n      this.msg = \"\";\r\n    }, 5000);\r\n  } catch (error) {\r\n    console.error('Erro ao atualizar pedido:', error);\r\n  }\r\n}\r\n\r\n    },\r\n    mounted() {\r\n        this.getPedidos();\r\n    },\r\n    components: { Message }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n  #burger-table {\r\n    max-width: 1200px;\r\n    margin: 0 auto;\r\n  }\r\n\r\n  #burger-table-heading,\r\n  #burger-table-rows,\r\n  .burger-table-row {\r\n    display: flex;\r\n    flex-wrap: wrap;\r\n  }\r\n\r\n  #burger-table-heading {\r\n    font-weight: bold;\r\n    padding: 12px;\r\n    border-bottom: 3px solid #333;\r\n  }\r\n\r\n  h2 {\r\n    padding: 50px;\r\n    text-align: center;\r\n  }\r\n\r\n  .burger-table-row {\r\n    width: 100%;\r\n    padding: 12px;\r\n    border-bottom: 1px solid #CCC;\r\n  }\r\n\r\n  #burger-table-heading div,\r\n  .burger-table-row div {\r\n    width: 19%;\r\n  }\r\n\r\n  #burger-table-heading .order-id,\r\n  .burger-table-row .order-number {\r\n    width: 5%;\r\n  }\r\n\r\n  select {\r\n    padding: 12px 6px;\r\n    margin-right: 12px;\r\n  }\r\n\r\n  .delete-btn {\r\n    background-color: #222;\r\n    color:#fcba03;\r\n    font-weight: bold;\r\n    border: 2px solid #222;\r\n    padding: 10px;\r\n    font-size: 16px;\r\n    margin: 0 auto;\r\n    cursor: pointer;\r\n    transition: .5s;\r\n  }\r\n  \r\n  .delete-btn:hover {\r\n    background-color: transparent;\r\n    color: #222;\r\n  }\r\n  \r\n</style>"],"mappings":"AA4CA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAOC,OAAM,MAAO,eAAe;AACnC,eAAe;EACXC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,OAAO,EAAE,IAAI;MACbC,SAAS,EAAE,IAAI;MACfC,MAAM,EAAE,EAAE;MACVC,GAAG,EAAE;IACT,CAAC;EACL,CAAC;EACDC,OAAO,EAAE;IACL,MAAMC,UAAUA,CAAA,EAAG;MACzB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMV,KAAK,CAACW,GAAG,CAAC,+BAA+B,CAAC;QACjE,IAAI,CAACP,OAAM,GAAIM,QAAQ,CAACP,IAAI;QAC5B,MAAM,IAAI,CAACS,SAAS,CAAC,CAAC;MACxB,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,wBAAwB,EAAEA,KAAK,CAAC;MAChD;IACF,CAAC;IAED,MAAMD,SAASA,CAAA,EAAG;MAChB,IAAI;QACF,MAAMF,QAAO,GAAI,MAAMV,KAAK,CAACW,GAAG,CAAC,8BAA8B,CAAC;QAChE,IAAI,CAACL,MAAK,GAAII,QAAQ,CAACP,IAAI;MAC7B,EAAE,OAAOU,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,uBAAuB,EAAEA,KAAK,CAAC;MAC/C;IACF,CAAC;IAED,MAAME,YAAYA,CAACC,EAAE,EAAE;MACrB,IAAI;QACF,MAAMN,QAAO,GAAI,MAAMV,KAAK,CAACiB,MAAM,CAAE,iCAAgCD,EAAG,EAAC,C